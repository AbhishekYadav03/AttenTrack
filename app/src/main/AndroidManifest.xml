<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="tk.jabtk.attentrack">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        tools:ignore="ScopedStorage" />

    <application
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/icon"
        android:supportsRtl="true"
        android:theme="@style/Theme.AttenTrack">
        <!-- Student Activities -->

        <activity
            android:name=".student.RegisterStudent"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:theme="@style/Theme.AttenTrack.NoActionBar" />
        <activity
            android:name=".student.StudentLogin"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:theme="@style/Theme.AttenTrack.NoActionBar" />
        <activity
            android:name=".student.StudentMainActivity"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:theme="@style/Theme.AttenTrack.NoActionBar" />


        <!-- Admin Activities -->
        <activity
            android:name=".admin.AdminMainActivity"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:theme="@style/Theme.AttenTrack.NoActionBar"/>
        <activity
            android:name=".admin.RegisterAdmin"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:theme="@style/Theme.AttenTrack.NoActionBar" />
        <activity
            android:name=".admin.AdminLogin"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:theme="@style/Theme.AttenTrack.NoActionBar" />

        <!-- Crop Image Activity -->
        <activity
            android:name="com.theartofdev.edmodo.cropper.CropImageActivity"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:theme="@style/Base.Theme.AppCompat" />

        <!-- Professor Activities -->
        <activity
            android:name=".ForgotPassword"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:theme="@style/Theme.AttenTrack.NoActionBar" />
        <activity
            android:name=".professor.RegisterProfessor"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:theme="@style/Theme.AttenTrack.NoActionBar" />
        <activity
            android:name=".professor.ProfessorLogin"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:theme="@style/Theme.AttenTrack.NoActionBar" />
        <activity
            android:name=".professor.ProfessorMainActivity"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:theme="@style/Theme.AttenTrack.NoActionBar" />
        <activity
            android:name=".StartActivity"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:theme="@style/Theme.AttenTrack.NoActionBar" /> <!-- Splash Screen Activities -->
        <activity
            android:name=".SplashScreen"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:theme="@style/Theme.AttenTrack.NoActionBar"
            android:screenOrientation="fullUser" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>